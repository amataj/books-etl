    <!--
        Clean up orphaned BookFile rows and enforce the mandatory relationship to Book.
    -->
    <changeSet id="20251107193500-1" author="codex">
        <delete tableName="book_file">
            <where>book_id IS NULL</where>
        </delete>
        <addNotNullConstraint tableName="book_file" columnName="book_id" columnDataType="bigint"/>
    </changeSet>

</databaseChangeLog>
